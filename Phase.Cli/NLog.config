<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <targets>
    <target name="console" type="ColoredConsole" layout="${longdate} ${level} ${callsite} - ${message} ${exception:format=ToString}" />
    <target name="debugger" type="Debugger" layout="${longdate} ${level} ${callsite} - ${message} ${exception:format=ToString}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="console,debugger" />
  </rules>

</nlog>
